<!DOCTYPE html>


<html lang="en">
    <%- include('./partials/head.ejs')  %>
<body>
    <%- include('./partials/nav.ejs') %>

  
   <div class="blog-content">
    <h2>
        All BLogs  
    </h2>
 
    <% if (blogs.length > 0){ %>
      <% blogs.forEach(blog=>{ %>
        <a class="single"href="/blogs/<%=blog._id%>">
         <h3 class="title"> <%= blog.title %> </h3>
         <p class="snippet"> <%=blog.snippet %> </p>
        </a>
   <% }) %> 
   <% } %> 
   
   
   </div>

</body>
<%- include('./partials/head.ejs')  %>
</html>